<Window x:Class="_9Pr_Kazakov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_9Pr_Kazakov"
        mc:Ignorable="d"
        Title="Воины: Лёгкие vs Тяжёлые доспехи" Height="400" Width="800" MinHeight="400" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Лёгкие доспехи -->
        <Border Grid.Column="0" Background="#FFE0F7FA" Padding="20" BorderBrush="#FF00BCD4" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
                <Image x:Name="LightWarriorImage"
                    Source="C:\Users\student-a502\Desktop\9Pr_Kazakov\9Pr_Kazakov\Images\LightArmorAlive.png" 
                    Width="100" Height="100" Stretch="Uniform" Margin="0,0,0,15"/>

                <TextBlock Text="Воин в лёгких доспехах" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Здоровье:" FontSize="14" Margin="0,0,0,5"/>

                <TextBox x:Name="LightHealthText" 
                         FontSize="20" 
                         FontWeight="SemiBold" 
                         TextAlignment="Center"
                         Width="120" 
                         Height="40"
                         Background="White"
                         BorderBrush="Gray"
                         BorderThickness="1"/>

                <Button x:Name="LightDamageButton" Content="Нанести урон (10)" 
                        Width="150" Height="35" Margin="0,20,0,0"
                        Click="LightDamageButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Тяжёлые доспехи -->
        <Border Grid.Column="1" Background="#FFF3E0D7" Padding="20" BorderBrush="#FF5D4037" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
                <Image x:Name="HeavyWarriorImage"
                   Source="C:\Users\student-a502\Desktop\9Pr_Kazakov\9Pr_Kazakov\Images\HeaveArmorAlive.png" 
                   Width="100" Height="100" Stretch="Uniform" Margin="0,0,0,15"/>

                <TextBlock Text="Воин в тяжёлых доспехах" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Здоровье:" FontSize="14" Margin="0,0,0,5"/>

                <TextBox x:Name="HeavyHealthText" 
                         FontSize="20" 
                         FontWeight="SemiBold" 
                         TextAlignment="Center"
                         Width="120" 
                         Height="40"
                         Background="White"
                         BorderBrush="Gray"
                         BorderThickness="1"/>

                <Button x:Name="HeavyDamageButton" Content="Нанести урон (10)" 
                        Width="150" Height="35" Margin="0,20,0,0"
                        Click="HeavyDamageButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
